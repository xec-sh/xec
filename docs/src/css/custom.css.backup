/**
 * Any CSS included here will be global. The classic template
 * bundles Infima by default. Infima is a CSS framework designed to
 * work well for content-centric websites.
 */

/* Import Fira Code font */
@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&display=swap');

/* Import KaTeX styles for math formulas */
@import url('https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css');

/* You can override the default Infima variables here. */
:root {
  --ifm-color-primary: #2563eb;
  --ifm-color-primary-dark: #1d4ed8;
  --ifm-color-primary-darker: #1e40af;
  --ifm-color-primary-darkest: #1e3a8a;
  --ifm-color-primary-light: #3b82f6;
  --ifm-color-primary-lighter: #60a5fa;
  --ifm-color-primary-lightest: #93bbfc;

  --ifm-code-font-size: 95%;
  --ifm-font-family-base:
    'Fira Code', monospace, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif;
  --ifm-font-family-monospace:
    'Fira Code', SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;

  --docusaurus-highlighted-code-line-bg: rgba(0, 0, 0, 0.1);

  /* Custom variables */
  --xec-hero-gradient: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
  --xec-border-color: #e5e7eb;
  --xec-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --xec-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --xec-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

/* For readability concerns, you should choose a lighter palette in dark mode. */
[data-theme='dark'] {
  --ifm-color-primary: #60a5fa;
  --ifm-color-primary-dark: #3b82f6;
  --ifm-color-primary-darker: #2563eb;
  --ifm-color-primary-darkest: #1d4ed8;
  --ifm-color-primary-light: #93bbfc;
  --ifm-color-primary-lighter: #a5c7fd;
  --ifm-color-primary-lightest: #c7dafd;

  --docusaurus-highlighted-code-line-bg: rgba(0, 0, 0, 0.3);

  --xec-hero-gradient: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  --xec-border-color: #374151;
}

/* Navbar customization */
.navbar {
  box-shadow: var(--xec-shadow-sm);
}

.navbar__title {
  font-weight: 700;
  font-size: 1.25rem;
}

