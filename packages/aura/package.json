{
  "name": "@xec-sh/aura",
  "version": "0.0.1",
  "description": "Post-minimalist TUI framework with fine-grained reactivity",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./reactive": {
      "types": "./dist/types/core/reactive/index.d.ts",
      "import": "./dist/core/reactive/index.js"
    },
    "./components": {
      "types": "./dist/types/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./prompts": {
      "types": "./dist/types/prompts/index.d.ts",
      "import": "./dist/prompts/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xec-sh/trm": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "24.2.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "rimraf": "6.0.1",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "tui",
    "terminal",
    "ui",
    "framework",
    "reactive",
    "typescript",
    "cli"
  ],
  "author": "",
  "license": "MIT"
}
