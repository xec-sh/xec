{
  "name": "@xec-sh/aura",
  "description": "Aura is a TypeScript library for building terminal user interfaces (TUIs)",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "version": "0.1.2",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun run build:native && bun run build:lib",
    "build:lib": "tsc -p tsconfig.build.json",
    "build:native": "bun scripts/build.ts --native",
    "build:native:current": "bun scripts/build.ts --native --current",
    "build:native:dev": "bun scripts/build.ts --native --dev",
    "build:rust": "cd rust && cargo build --release",
    "build:rust:dev": "cd rust && cargo build",
    "pack": "node scripts/pack.mjs",
    "pack:verbose": "node scripts/pack.mjs --verbose",
    "publish": "bun scripts/publish.ts",
    "publish:dry-run": "bun scripts/publish.ts --dry-run",
    "test": "bun test",
    "prettier:write": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xec-sh/xec",
    "directory": "packages/aura"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "commander": "14.0.0",
    "prettier": "3.6.2",
    "tui-tester": "^0.3.0",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "dependencies": {
    "vibrancy": "^0.3.0",
    "yoga-layout": "3.2.1"
  },
  "optionalDependencies": {
    "koffi": "2.14.0",
    "@xec-sh/aura-native-darwin-x64": "0.1.2",
    "@xec-sh/aura-native-darwin-arm64": "0.1.2",
    "@xec-sh/aura-native-linux-x64": "0.1.2",
    "@xec-sh/aura-native-linux-arm64": "0.1.2",
    "@xec-sh/aura-native-win32-x64": "0.1.2",
    "@xec-sh/aura-native-win32-arm64": "0.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.2.0"
  }
}