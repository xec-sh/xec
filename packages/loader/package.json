{
  "name": "@xec-sh/loader",
  "version": "0.8.3",
  "description": "Universal script loader and module system for Xec",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    },
    "./repl": {
      "import": "./dist/repl/index.js",
      "types": "./dist/repl/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@xec-sh/kit": "workspace:*",
    "esbuild": "0.25.10"
  },
  "devDependencies": {
    "@types/node": "24.6.2",
    "@vitest/coverage-v8": "3.2.4",
    "@xec-sh/testing": "workspace:*",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "chokidar": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "chokidar": {
      "optional": true
    }
  },
  "keywords": [
    "xec",
    "script",
    "loader",
    "module",
    "typescript",
    "execution"
  ],
  "author": "Xec Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xec-sh/xec.git",
    "directory": "packages/loader"
  }
}
