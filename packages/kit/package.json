{
  "name": "@xec-sh/kit",
  "version": "0.8.3",
  "description": "TypeScript library for building beautiful command-line interfaces",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xec-sh/xec",
    "directory": "packages/kit"
  },
  "bugs": {
    "url": "https://github.com/xec-sh/xec/issues"
  },
  "homepage": "https://github.com/xec-sh/xec/tree/main/packages/kit#readme",
  "files": [
    "dist",
    "src",
    "CHANGELOG.md"
  ],
  "author": {
    "name": "Xec Contributors"
  },
  "license": "MIT",
  "keywords": [
    "ask",
    "cli",
    "command-line",
    "command",
    "input",
    "interact",
    "interface",
    "menu",
    "prompt",
    "prompts",
    "stdin",
    "ui",
    "terminal",
    "tui",
    "xec"
  ],
  "scripts": {
    "build": "bun scripts/build.ts",
    "build:watch": "bun scripts/build.ts --watch",
    "typecheck": "tsc --noEmit",
    "test": "FORCE_COLOR=1 vitest run",
    "test:watch": "FORCE_COLOR=1 vitest watch",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "dependencies": {
    "sisteransi": "^1.0.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "24.6.2",
    "memfs": "4.48.1",
    "prettier": "^3.6.2",
    "tui-tester": "^0.3.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vitest-ansi-serializer": "^0.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.2.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
