{
  "test": {
    "include": ["test/**/*.test.ts"],
    "exclude": ["node_modules"]
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  },
  "imports": {
    "vitest": "npm:vitest@3.2.4"
  }
}