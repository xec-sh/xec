{
  "name": "@xec-sh/trm",
  "version": "0.1.0",
  "description": "Ultra-performant, runtime-agnostic terminal manipulation library with zero-cost abstractions",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:node": "vitest run",
    "test:bun": "bun test test/**/*.test.ts",
    "test:deno": "deno test --allow-all test/**/*.test.ts",
    "test:all": "npm run test:node && npm run test:bun && npm run test:deno",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:integration:coverage": "vitest --config vitest.integration.config.ts --coverage",
    "test:integration:watch": "vitest --config vitest.integration.config.ts --watch",
    "test:full": "npm run test && npm run test:integration",
    "test:full:coverage": "npm run test:coverage && npm run test:integration:coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.ts"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "keywords": [
    "terminal",
    "tui",
    "console",
    "ansi",
    "escape-codes",
    "cursor",
    "color",
    "style",
    "cross-platform",
    "node",
    "deno",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "24.2.1",
    "@xec-sh/tui-tester": "workspace:*",
    "strip-ansi": "^7.1.0",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
