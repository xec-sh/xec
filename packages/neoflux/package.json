{
  "name": "@xec-sh/neoflux",
  "version": "0.2.0",
  "description": "High-performance reactive state management system inspired by SolidJS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:bench": "vitest bench",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "clean": "rm -rf dist .turbo",
    "prepack": "yarn build"
  },
  "keywords": [
    "reactive",
    "signals",
    "state",
    "store",
    "computed",
    "effect",
    "solidjs",
    "fine-grained",
    "reactivity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.33.0",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xec-sh/xec",
    "directory": "packages/neoflux"
  },
  "bugs": {
    "url": "https://github.com/xec-sh/xec/issues"
  },
  "homepage": "https://github.com/xec-sh/xec/tree/main/packages/neoflux"
}