{
  "name": "xec-sh",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('Please use Yarn to install dependencies. Run: corepack enable && yarn install')\"",
    "postinstall": "node -e \"console.log('âœ… Dependencies installed with Yarn ' + process.env.npm_config_user_agent.split('/')[1])\"",
    "build": "turbo build --filter=@xec-sh/cli",
    "build:full": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "eslint \"{apps,packages}/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"{apps,packages}/**/*.{js,jsx,ts,tsx}\"",
    "lint:print": "eslint --print-config eslint.config.mjs > eslint-show-config.json",
    "fm:check": "prettier --check \"{apps,packages}/**/*.{js,jsx,ts,tsx}\"",
    "fm:fix": "prettier --write \"{apps,packages}/**/*.{js,jsx,ts,tsx}\"",
    "fix:all": "npm run lint:fix && npm run fm:fix",
    "cleanup": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "changeset": "changeset",
    "ai-prompt": "ts-node scripts/gen-aiprompt.ts",
    "publish": "ts-node scripts/publish.ts",
    "link:global": "cd apps/xec && yarn build && npm link",
    "unlink:global": "cd apps/xec && npm unlink -g @xec-sh/cli",
    "docs:start": "cd docs && yarn start",
    "docs:build": "cd docs && yarn build",
    "docs:serve": "cd docs && yarn serve",
    "docs:deploy": "cd docs && yarn deploy",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/add": "^2.0.3",
    "@types/debug": "^4",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "add": "^2.0.6",
    "debug": "^4.4.1",
    "eslint": "9.35.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-unused-imports": "4.2.0",
    "prettier": "^3.6.2",
    "ts-loader": "9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.43.0"
  },
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "docs"
  ],
  "publishConfig": {
    "workspaceProtocol": "version"
  }
}
